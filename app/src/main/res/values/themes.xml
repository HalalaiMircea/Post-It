<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PostIt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/medium_blue</item>
        <item name="colorPrimaryVariant">@color/dark_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:buttonStyleInset">@dimen/zero</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">
            @style/Widget.MaterialComponents.Button.NoInsets
        </item>
    </style>

    <style name="Theme.PostIt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.MaterialComponents.Button.NoInsets" parent="Widget.MaterialComponents.Button">
        <!-- Here you can customize the drawable insets! -->
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="Theme.PostIt.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_custom</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_60</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ToolbarTitleText" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.PostIt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PostIt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>